<Window x:Class="MiiCreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MiiCreator"
        mc:Ignorable="d"
        Title="MiiCreator" Height="350" Width="525">
    <StackPanel x:Name="MainContent" Orientation="Horizontal" HorizontalAlignment="Left">
        <Button Click="Button_Click" VerticalAlignment="Top" Content="Head"/>
        <Button VerticalAlignment="Top" Content="Eyes"/>
        <Button VerticalAlignment="Top" Content="Nose"/>
        <Button VerticalAlignment="Top" Content="Mouth"/>
        <Button VerticalAlignment="Top" Content="Hair"/>
        <Canvas x:Name="FaceCanvas" Width="250" Background="Teal" HorizontalAlignment="Center">
            <Ellipse x:Name="Head1"
                Height="{Binding Value, ElementName=heightslider}" 
                Width="{Binding Value, ElementName=widthslider}" 
                Fill="BurlyWood" RenderTransformOrigin="0.5,0.5" Canvas.Left="96" Canvas.Top="95"/>
        </Canvas>
        <StackPanel>
            <Slider x:Name="widthslider" Minimum="50" Maximum="100" Width="100" />
            <Slider x:Name="heightslider" Minimum="50" Maximum="100"/>
        </StackPanel>
    </StackPanel>
</Window>
